#!/usr/bin/make -f

%:
	dh $@

override_dh_install:
	dh_install

override_dh_auto_test:
	# skip staticchecks on package build
	$(MAKE) test TEST_SKIP_STATICCHECKS=1

override_dh_usrlocal:
	@echo "skip dh_usrlocal"

override_dh_clean:
	# go modules are installed in GOCACHE without writable permissions by
	# default, so we need to clean them up before cleaning up the build
	# otherwise dh_clean will fail due to permission issues
	go clean -modcache || true
	dh_clean
